html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
    body.d-flex.align-items-center
        .container        
            .row.justify-content-center
                .col-md-5
                    h1.text-center Member Login
                    if error
                        .alert.alert-danger= error

                    form(action="/login" method="POST")
                        .form-group
                            label(for="user") Username
                            input(id="user" type="text" name="username" class="form-control" value=values ? values.username : "")                
                        .form-group
                            label(for="pass") Password
                            input(id="pass" type="password" name="passwd" class="form-control")                        
                        button.w-100.mt-3(class="btn btn-primary") SIGN IN
                    span Don't have account? 
                        a(href="/users") Sign up