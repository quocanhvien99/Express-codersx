extends ./layouts/common

block content
    .container            
        h1 Users

        if error
            .alert.alert-danger= error

        form(action="/users/add" method="POST")
            .form-group
                label(for="email") Email
                input(id="email" type="text" name="email" class="form-control" value=values ? values.email : "")
            .form-group
                label(for="username") Username
                input(id="username" type="text" name="username" class="form-control")
            .form-group
                label(for="pass") Password
                input(id="pass" type="password" name="passwd" class="form-control")
            button(class="btn btn-primary") Add

        table.table
            tr
                th Name
                th Email
                th Action
            each user in users
                tr
                    td= user.username
                    td= user.email
                    td
                        a.btn.btn-light(href="/users/" + user.id +"/edit") Edit
                        a.btn.btn-light(href="/users/" + user.id +"/delete") Delete 
                            
                    
