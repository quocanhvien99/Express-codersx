extends ../layouts/common

block content
    .container
        .row
            each book in books
                .col-sm-6.col-md-4.col-lg-3
                    .card.mb-3
                        img.card-img-top(src= book.coverUrl height="222")
                        .card-body
                            h5.card-title= book.title
                            p.card-text= book.description
                            a.btn.btn-primary(href="/cart/add/" + book.id) Add to cart